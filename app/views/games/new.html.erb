<div class="container">

  <h1>New Game</h1>
  <ul>
    <% @letters.each do |letter| %>
      <li class="box"><%= letter %></li>
    <% end %>
  </ul>

  <form class="form" action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag "letters", @letters %>
    <input type="text" name="answer" placeholder="Write the longest word you can find!">
    <input class="button" type="submit" value="Send!">
  </form>

</div>
